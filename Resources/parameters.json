{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appGatewayName": {
            "value": "__appGatewayName__"
        },
        "appGatewaySubnetRef": {
            "value": "__subnetResourceId__"
        },
        "backendProbes": {
            "value": [
                {
                    "name": "standardBackendProbe",
                    "type": "Microsoft.Network/applicationGateways/probes",
                    "properties": {
                        "provisioningState": "Succeeded",
                        "protocol": "Https",
                        "path": "/",
                        "interval": 30,
                        "timeout": 30,
                        "unhealthyThreshold": 3,
                        "pickHostNameFromBackendHttpSettings": true,
                        "minServers": 0,
                        "match": {
                            "statusCodes": [
                                "200-399"
                            ]
                        }
                    }
                }
            ]
        },
        "appGatewayPools": {
            "value": [ {
                "name": "defaultBackend",
                "fqdn": "__liveBackend__"
            }, {
                "name": "oldBackend",
                "fqdn": "__bauBackend__"
            } ]
        },
        "appGatewayRouting": {
            "value": [ {
                "name": "defaultUrlMapping",
                "backend": "oldBackend",
                "paths": [
                    "/skills-health-check/*",
                    "/ResourcePackages/*",
                    "/your-account/*",
                    "/home/signout"
                ]
            } ]
        },
        "appGatewayRewrites": {
            "value": [
                {
                    "name": "Location_dev-beta.nationalcareersservice.org.uk",
                    "ruleSequence": 10,
                    "conditions": [
                        {
                            "variable": "http_resp_Location",
                            "pattern": "(https?):\\/\\/dev-beta\\.nationalcareersservice\\.org\\.uk(.*)$",
                            "ignoreCase": true,
                            "negate": false
                        }
                    ],
                    "actionSet": {
                        "responseHeaderConfigurations": [
                            {
                                "headerName": "Location",
                                "headerValue": "{http_resp_Location_1}://dev-ag.nationalcareersservice.org.uk{http_resp_Location_2}"
                            }
                        ]
                    }
                },
                {
                    "name": "Location_dev.nationalcareersservice.org.uk",
                    "ruleSequence": 20,
                    "conditions": [
                        {
                            "variable": "http_resp_Location",
                            "pattern": "(https?):\\/\\/dev\\.nationalcareersservice\\.org\\.uk(.*)$",
                            "ignoreCase": true,
                            "negate": false
                        }
                    ],
                    "actionSet": {
                        "responseHeaderConfigurations": [
                            {
                                "headerName": "Location",
                                "headerValue": "https://dev-ag.nationalcareersservice.org.uk{http_resp_Location_2}"
                            }
                        ]
                    }
                },
                {
                    "name": "Location_azurewebsites.net",
                    "ruleSequence": 30,
                    "conditions": [
                        {
                            "variable": "http_resp_Location",
                            "pattern": "(https?):\\/\\/[^\\/]+azurewebsites\\.net(.*)$",
                            "ignoreCase": true,
                            "negate": false
                        }
                    ],
                    "actionSet": {
                        "responseHeaderConfigurations": [
                            {
                                "headerName": "Location",
                                "headerValue": "{http_resp_Location_1}://dev-ag.nationalcareersservice.org.uk{http_resp_Location_2}"
                            }
                        ]
                    }
                },
                {
                    "name": "LocationRedirect_azurewebsites.net",
                    "ruleSequence": 40,
                    "conditions": [
                        {
                            "variable": "http_resp_Location",
                            "pattern": "(.*)redirect_uri=(https?)%3a%2f%2f.*azurewebsites\\.net(.*)$",
                            "ignoreCase": true,
                            "negate": false
                        }
                    ],
                    "actionSet": {
                        "responseHeaderConfigurations": [
                            {
                                "headerName": "Location",
                                "headerValue": "{http_resp_Location_1}redirect_uri=https%3a%2f%2fdev-ag.nationalcareersservice.org.uk{http_resp_Location_3}"
                            }
                        ]
                    }
                },
                {
                    "name": "CookieResponse",
                    "ruleSequence": 50,
                    "conditions": [
                        {
                            "variable": "http_resp_Set-Cookie",
                            "pattern": "(.*)Domain=([^;]+)(.*)",
                            "ignoreCase": true,
                            "negate": false
                        }
                    ],
                    "actionSet": {
                        "responseHeaderConfigurations": [
                            {
                                "headerName": "Set-Cookie",
                                "headerValue": "{http_resp_Set-Cookie_1}Domain=dev-ag.nationalcareersservice.org.uk{http_resp_Set-Cookie_3}"
                            }
                        ]
                    }
                },
                {
                    "name": "X-Content-Security-Policy-Rewrite",
                    "ruleSequence": 60,
                    "conditions": [
                        {
                            "variable": "http_resp_X-Content-Security-Policy",
                            "pattern": "(.*)dfc-beta-dev-01-web\\.azurewebsites\\.net:443(.*)",
                            "ignoreCase": true,
                            "negate": false
                        }
                    ],
                    "actionSet": {
                        "responseHeaderConfigurations": [
                            {
                                "headerName": "X-Content-Security-Policy",
                                "headerValue": "{http_resp_X-Content-Security-Policy_1}dev-ag.nationalcareersservice.org.uk{http_resp_X-Content-Security-Policy_2}"
                            }
                        ]
                    }
                },
                {
                    "name": "Content-Security-Policy-Rewrite",
                    "ruleSequence": 70,
                    "conditions": [
                        {
                            "variable": "http_resp_Content-Security-Policy",
                            "pattern": "(.*)dfc-beta-dev-01-web\\.azurewebsites\\.net:443(.*)",
                            "ignoreCase": true,
                            "negate": false
                        }
                    ],
                    "actionSet": {
                        "responseHeaderConfigurations": [
                            {
                                "headerName": "Content-Security-Policy",
                                "headerValue": "{http_resp_Content-Security-Policy_1}dev-ag.nationalcareersservice.org.uk{http_resp_Content-Security-Policy_2}"
                            }
                        ]
                    }
                }
            ]
        },
        "publicDnsLabel": {
            "value": "__publicDnsLabel__"
        },
        "keyVaultName": {
            "value": "__keyVaultName__"
        },
        "keyVaultSecretName": {
            "value": "__keyVaultSecretName__"
        }
    }
}