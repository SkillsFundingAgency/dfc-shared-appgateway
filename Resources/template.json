{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourcePrefix": {
            "type": "string",
            "metadata": {
                "description": "The name of new Azure VNet where you can deploy Azure Sql Managed Instances and the resources that use them"
            }
        },
        "virtualNetworkAddressPrefix": {
            "type": "string",
            "metadata": {
                "description": "First 2 octects of VNet Private IP address range (VNet prefix)"
            }
        },
        "capacity": {
            "type": "int",
            "minValue": 2,
            "maxValue": 75,
            "defaultValue": 2,
            "metadata": {
                "description": "Number of instances of the app gateway running"
            }
        }
    },
    "variables": {
        "deploymentUrlBase": "https://raw.githubusercontent.com/SkillsFundingAgency/dfc-shared-appgateway/NCSD-754_ArmTemplate/Resources/ArmTemplates/",
        "appGatewayName": "[concat(parameters('resourcePrefix'),'-ag')]"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "sharedNetworkEnvironment",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'environment.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetworkPrefix": {
                        "value": "[parameters('resourcePrefix')]"
                    },
                    "virtualNetworkAddressPrefix": {
                        "value": "[parameters('virtualNetworkAddressPrefix')]"
                    },
                    "virtualNetworkNonRoutedSubnets": {
                        "value": [ "appgateway" ]
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "sharedAppGateway",
            "type": "Microsoft.Resources/deployments",
            "dependsOn": [
                "sharedNetworkEnvironment"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'app-gateway.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appGatewayName": {
                        "value": "[variables('appGatewayName')]"
                    },
                    "subnetRef": {
                      "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', reference('sharedNetworkEnvironment').outputs.virtualNetworkName.value, 'appgateway')]"
                    },
                    "appGatewayTier": {
                        "value": "Standard_v2"
                    },
                    "capacity": {
                        "value": "[parameters('capacity')]"
                    },
                    "backendIPAddresses": {
                        "value": [ "dev-coursedirectory.nationalcareersservice.org.uk" ]
                    }
                }
            }
        }
    ],
    "outputs": {
    }
}